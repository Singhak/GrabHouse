<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frameLayout_demo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="invisible"
            android:background="#96ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="2dp"
            android:weightSum="5">
            <Button
                android:id="@+id/button_demo_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:borderlessButtonStyle"
                android:textColor="#c8373737"
                android:text="SKIP"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_oval_1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="5dp"
                    android:scaleType="center"
                    android:src="@drawable/oval_viewpager_indicator_dark"/>
                <ImageView
                    android:id="@+id/iv_oval_2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="5dp"
                    android:scaleType="center"
                    android:src="@drawable/oval_viewpager_indicator_light"/>
                <ImageView
                    android:id="@+id/iv_oval_3"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="5dp"
                    android:scaleType="center"
                    android:src="@drawable/oval_viewpager_indicator_light"/>
            </LinearLayout>
            <Button
                android:id="@+id/button_demo_nextanddone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:borderlessButtonStyle"
                android:textColor="#C8373737"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

